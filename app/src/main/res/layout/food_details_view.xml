<?xml version="1.0" encoding="utf-8"?>

<!-- Wyglad pojedynczego produktu po nacisnieciu na niego (gdy ogladamy liste) -->

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FoodDetailsWindow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="434dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/food_item_big_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_cake_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/food_item_energy_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="118 kcal"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/food_item_carbs_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.0 g"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/food_item_protein_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="16.5 g"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/food_item_fat_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5.3 g"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/food_item_energy_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Energy"
                android:textAlignment="center"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/food_item_carbs_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Carbs"
                android:textAlignment="center"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/food_item_protein_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Protein"
                android:textAlignment="center"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/food_item_fat_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fat"
                android:textAlignment="center"
                android:textSize="9dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/food_item_mass_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="asd"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            tools:text="Enter the mass" />

        <Button
            android:id="@+id/food_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:onClick="addChosenProduct"
            android:text="Add"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="TextView"
            android:visibility="visible" />

    </LinearLayout>
</android.support.v7.widget.CardView>